<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.confessor.ConfessorHomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Priest ID to Call:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/priestIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Priest User ID"
        android:inputType="text"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/callPriestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Call Priest" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Status: Idle"
        android:textSize="18sp" />

    <Button
        android:id="@+id/cancelCallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Cancel Call"
        android:visibility="gone" />

</LinearLayout>
